<%- include('partials/header.ejs') %>

    <div class="container pt-5 pb-5">

        <div class="p-3 text-center text-white bg-secondary">
            <h1> Posts Details</h1>
        </div>
        <div class="row">
            <div class="col">
          
                <% blog.forEach ((blog)=>{ %>
                    <div class="card pt-5 border-0">
                        
                        <div class="card-body">
                            <h1 class="card-title">
                                <%=blog.title%>
                            </h1>
    
                            <p class="card-text">
                                <%-blog.description,0, 200%>
                            </p>
                            <span class="small-text"><%=blog.created%></span>
                            <div class="pt-5">
                                <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal"  href="/delete/<%=blog.id%>">Delete</a>
                                <a class="btn btn-primary" href="/post/update/<%=blog.id%>">Edit</a>
                                <% if(blog.status == 0){ %>
                                <a class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#draft" href="/draft/<%=blog.id%>/<%=blog.status%>">Hide Post</a>
                                  <% } else{ %>  
                                <a class="btn btn-info" data-bs-toggle="modal" data-bs-target="#draft" href="/draft/<%=blog.id%>/<%=blog.status%>">Show Post</a>
                                 <% } %>
                              </div>
                        </div>
                    </div>
                    <hr>
            </div>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header border-0">
                      <h5 class="modal-title" id="exampleModalLabel">Delete Post</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to Delete Post
                    </div>
                    <div class="modal-footer border-0">
                      <button type="button" class="btn btn-warning" data-bs-dismiss="modal">No</button>
                      <a href="/delete/<%=blog.id%>" class="btn btn-danger">Yes</a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="modal fade" id="draft" tabindex="-1" aria-labelledby="draftl" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                    <div class="modal-header border-0">
                      <h5 class="modal-title" id="exampleModalLabel">Delete Post</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to Hide Post
                    </div>
                    <div class="modal-footer border-0">
                      <button type="button" class="btn btn-warning" data-bs-dismiss="modal">No</button>
                      <a href="/draft/<%=blog.id%>/<%=blog.status%>" class="btn btn-info">Yes</a>
                    </div>
                  </div>
                </div>
              </div>
        
            <% }) %>
            </div>
        </div>
    </div>


    <%- include('partials/footer.ejs') %>